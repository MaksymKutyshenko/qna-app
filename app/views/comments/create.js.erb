$('.new_comment textarea').val('');
$('.alert').html('');
$('.notice').html('');

<% if @comment.errors.present? %>
  $('.alert').html("<%= @comment.errors.full_messages.to_sentence %>");
<% else %>
  $('.notice').html('Your comment cussessfully created');
  var commentableType = '<%= @comment.commentable_type.downcase %>'
  $('.'+commentableType+' <%= ".comments-#{@comment.commentable_id}" %>')
    .append("<%= j render @comment %>");
<% end %>